    <%= form.text_area :body, class: "form-control", placeholder: "Article Body" %>
  </div>

  <div class="form-group">
    <%= form.text_field :image_url, class: "form-control", placeholder: "Image URL" %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: "btn btn-primary btn-default" %>
  </div>
<% end %>
